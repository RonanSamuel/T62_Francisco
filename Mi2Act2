#include <iostream>
using namespace std;

int main(){

	int money, change;
	int coke = 95, pepsi = 100, pepper = 120;
	char choice;

	cout << "Select your order" << endl;
	cout << "\n[1] Pepsi(P100)\n[2] Dr. Pepper(P120)\n[3] Coca-Cola(P95)\n" << endl;
	cout << "Choice: " << endl;
	cin >> choice;
	
	if (choice == '1')
	{
	    cout << "Enter your payment: " << endl;
        cin >> money;

        if (money > pepsi)
        {
            change = (money - pepsi);
            cout << "You have purchase Pepsi" << endl;
            cout << "Change: " << change << endl;
        }
        else
        {
            cout << "You don't have enough money" << endl;
        }
	}
	else if (choice == '2')
	{
	    cout << "Enter your payment: " << endl;
        cin >> money;

        if (money > pepper)
        {
            change = (money - pepper);
            cout << "You have purchase Dr. Pepper" << endl;
            cout << "Change: " << change << endl;
        }
        else
        {
            cout << "You don't have enough money" << endl;
        }
	}
	else if (choice == '3')
	{
	    cout << "Enter your payment: " << endl;
        cin >> money;

        if (money > coke)
        {
            change = (money - coke);
            cout << "You have purchase Coca-Cola" << endl;
            cout << "Change: " << change << endl;
        }
        else
        {
            cout << "You don't have enough money" << endl;
        }
	}
	else
    {
		cout << "Invalid" << endl;
    }
	
	system("PAUSE");
	return 0;
}
