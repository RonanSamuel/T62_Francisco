#include <stdio.h>
#include <GL/glut.h>
void display(void)
{
	glClear( GL_COLOR_BUFFER_BIT);
	glColor3f(1,1,1);
	glBegin(GL_TRIANGLES);

	glVertex2f(0,10);
	glVertex2f(-9,-5);
	glVertex2f(9,-5);

	glEnd();

	glColor3f(0,0,0);
	glBegin(GL_TRIANGLES);

	glVertex2f(0,0);
	glVertex2f(-6,0);
	glVertex2f(-3,-5);

	glVertex2f(0,0);
	glVertex2f(3,-5);
	glVertex2f(6,0);

	glVertex2f(0,0);
	glVertex2f(3,5);
	glVertex2f(-3,5);

	glEnd();
	glFlush();

}

int main(int argc, char **argv)
{
	printf("Hello Sir Dacer!\n");
	glutInit(&argc, argv);
	glutInitDisplayMode ( GLUT_SINGLE | GLUT_RGB | GLUT_DEPTH);

	glutInitWindowPosition(200,200);
	glutInitWindowSize(500,500);
	glutCreateWindow ("The Triangle");

	glClearColor(0, 0, 0, 0);         
	glMatrixMode(GL_PROJECTION);              
	glLoadIdentity();                           
	gluOrtho2D(-15,15,-15,15);   

	glutDisplayFunc(display);
	glutMainLoop();

	return 0;
}
